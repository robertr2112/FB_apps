<% provide(:title, 'Current Games') %>
<div class="row">
  <aside class="span8">
    <section>
      <h1>Current Games</h1>
    </section>

    <section>

      <% gameNum = 0 %>
      <% (@games).each do |game| %>
        <strong>Game <%= gameNum+1 %>  </strong> <br />
        <%= game.homeTeamIndex %>
        <%= @NflTeams[game.homeTeamIndex] %>
        <%= @NflTeams[game.homeTeamIndex].imagePath %>
        <%#= image_tag(imagePath,
                      size: "40") %>
        <%#= @NflTeams[game.homeTeamIndex].name %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;VS
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= image_tag(@NflTeams[game.awayTeamIndex].imagePath,
                      size: "35") %>
        <%= @NflTeams[game.awayTeamIndex].name %> <br />
        <% gameNum += 1 %>
      <% end %>
    </section>
  </aside>
  <div class="span4">
  </div>
</div>
