<% provide(:title, @pool.name) %>
<div class = "row">
  <%= render 'mgmt_menu', pool: @pool, current_week: @current_week %>
</div>
<div class="row">
  <aside class="col-md-8 col-md-offset-2">
    <section>
      <h1> <%= @pool.name %> </h1>
      <strong>Pool Type</strong> 
      <%= render 'show_type', pool: @pool %><br />
      <strong>Status</strong> 
      <% if @pool.isPublic %>
        Public<br />
      <% else %>
        Private<br />
      <% end %>
      <% if !@current_week.nil? %>
        <strong>Current Week</strong>
        <%= @current_week.week_number %><br />
        &nbsp;&nbsp;&nbsp;&nbsp;<strong>State</strong>
        <%= render 'show_week_state', current_week: @current_week %>
      <% end %>
    </section>
    <section>
      <% if @pool.poolType == Pool::POOL_TYPES[:Survivor] %>
        <h1>Current Board</h1>
        <% if !@current_week.nil? %>
          <%= render 'show_board', pool: @pool, current_week: @current_week %>
        <% else %>
          <p>This pool has not been activated yet! </p>
        <% end %>
      <% elsif @pool.poolType == Pool::POOL_TYPES[:SUP] %>
        <p>Sorry but SUP based pools are not supported at this time.</p>
      <% elsif @pool.poolType == Pool::POOL_TYPES[:PickEm] %>
        <p>Sorry but PickEm based pools are not supported at this time.</p>
      <% elsif @pool.poolType == Pool::POOL_TYPES[:PickEmSpread] %>
        <p>Sorry but PickEmSpread based pools are not supported at this time.</p>
      <% end %>
    </section>
  </aside>
  <div class="col-md-2">
    <h3>Weeks</h3>
    <% if @pool.isOwner?(current_user) %>
    <% end %>
    <% @season.weeks.order(:week_number).each do |week| %>
      <% if week == @current_week %>
        <%= link_to "Week #{week.week_number}", week_path(week), { class: "current-week" } %>
      <% else %>
        <%= link_to "Week #{week.week_number}", week_path(week) %>
      <% end %>
      <% if week.week_number % 3 == 0 %>
        <br />
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Members</h3>
    <%= will_paginate %>

    <% for user in @pool.users %>
      <ul id="pool-members">
        <%= render 'pool_member', user: user, pool: @pool %>
      </ul>
    <% end %>

    <%= will_paginate %>
  </div>
</div>




