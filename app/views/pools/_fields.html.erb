  <%= render 'shared/error_messages', :object => f.object %>

    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class = "controls">
        <%= f.text_field :name, class: 'text_field' %>
      </div>
    </div>

    <% if @pool_edit_flag %>
      Pool Type:
      <%= render 'show_type', :pool => @pool %> <br /><br />
    <% else %>
    <div class="control-group">
      <%= f.label :poolType, "Pool Type", class: 'control-label' %>
      <div class = "controls">
        <%= f.select(:poolType, Pool::POOL_TYPES, class: 'select') %>
      </div>
    </div>
    <% end %>

    <div class="control-group">
      <%= f.label :allowMulti, "Allow multiple entries", class: 'control-label' %>
      <div class = "controls">
        <%= f.radio_button :allowMulti, true, 
                     class: 'radio' %>Yes&nbsp&nbsp
        <%= f.radio_button :allowMulti, false, 
                     class: 'radio' %>No
      </div>
    </div>

    <div class="control-group">
      <%= f.label :isPublic, "Status", class: 'control-label' %>
      <div class = "controls">
        <%= f.radio_button :isPublic, true, 
                     class: 'radio' %>Public&nbsp&nbsp
        <%= f.radio_button :isPublic, false, 
                     class: 'radio' %>Private
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class = "controls">
        <%= f.text_field :password, class: 'password' %>
      </div>
    </div>
