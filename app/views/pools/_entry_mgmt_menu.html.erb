<% if pool.isMember?(current_user) %>
  <li class="dropdown">
    <a class="dropdown-toggle"
       data-toggle="dropdown"
      href="#" >
      Entry Mgmt
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Create entry", new_pool_entry_path(pool) %></li>
      <li class="divider"></li>
      <% entries = pool.entries.where(user_id: current_user.id) %>
      <% entries.each do |entry| %>
        <li class="dropdown-submenu">
          <a class="dropdown-toggle"
            data-toggle="dropdown"
            href="#" >
            <%= entry.name %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit entry", edit_entry_path(entry) %></li>
            <li>
              <%= link_to "Delete entry", entry, :method => :delete, 
                  :confirm => "Are you sure?", :title => "Delete#{entry.name}" %>
            </li>
            <% if !current_week.nil? %>
              <li><%= link_to "Create picks", new_entry_pick_path(entry) %></li>
              <li><%= link_to "Edit picks", "#" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>

