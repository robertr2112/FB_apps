<% if pool.isOwner?(current_user) %>
  <li class="dropdown">
    <a class="dropdown-toggle"
       data-toggle="dropdown"
      href="#" >
      Manage Pool
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        <li><%= link_to "Edit pool", edit_pool_path(pool) %></li>
        <li>
          <%= link_to "Delete pool", pool, :method => :delete, 
              :confirm => "Are you sure?", :title => "Delete#{pool.name}" %>
        </li>
    </ul>
  </li>
<% else %>
  <% if @pool.isMember?(current_user) %>
    <% if @pool.weeks.empty? %>
      <li><%= link_to "Leave Pool", leave_path(pool.id), id: pool.id %></li>
    <% end %>
  <% else %>
    <li><%= link_to "Join Pool", join_path(pool.id), id: pool.id %></li>
  <% end %>
<%end %>

