<% provide(:title, 'Create pool') %>
<h1>Create Pool</h1>
<div class="row">
  <div class="span6 offset2">
    <%= form_for(@pool, html: { class: 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
    <div class="control-group">
      <div class = "controls">
        <%= f.submit "Create pool", class: "btn btn-large btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
