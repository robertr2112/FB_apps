<% provide(:title, 'Pool index') %>
<h1>All Pools</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @pools.any? %>
      <%= will_paginate %>
      <table class="table table-striped table-condensed table-hover">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Type</th>
	    <th>Status</th>
	    <th>Membership</th>
	  </tr>
	</thead>
	<tbody>
	  <%= render @pools %>
	</tbody>
      </table>
      <%= will_paginate %>
    <% else %>
      <p> There are no pools available!</p>
    <% end %>
  </div>
</div>
