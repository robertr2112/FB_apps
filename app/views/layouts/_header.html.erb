<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Football Pool Mania", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Pools <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Pools", pools_path %></li>
                <li class="dropdown-submenu">
                  <a class="dropdown-toggle" data-toggle="dropdown"
                    href="#" > My Pools <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "All", my_pools_path %></li>
                    <li class="divider"></li>
                    <% current_user.pools.each do |pool| %>
                      <li><%= link_to "#{pool.name}", pool %></li>
                    <% end %>
                  </ul>
                </li>
                <li class="divider"></li>
                <li><%= link_to "Create a pool", new_pool_path %></li>
                <li><%= link_to "Join a pool", pools_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <% if !current_user.confirmed? %>
                  <li><%= link_to "Resend Confirmation", 
                                   resend_confirm_path(current_user) %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
