<% provide(:title, 'Season index') %>
<h1>All Seasons</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @seasons.any? %>
      <%= will_paginate %>
      <table class="table table-striped table-condensed table-hover">
	<thead>
	  <tr>
	    <th>Year</th>
	    <th>Type</th>
	    <th>Number of Weeks</th>
	    <th>Current Week</th>
	  </tr>
	</thead>
	<tbody>
	  <%= render @seasons %>
	</tbody>
      </table>
      <%= will_paginate %>
    <% else %>
      <p> There are no seasons available!</p>
    <% end %>
  </div>
</div>
