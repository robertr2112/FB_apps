<% provide(:title, "Season #{@season.year}") %>
<%= render 'mgmt_navbar', season: @season, current_week: @season.current_week %>
<% if @season.isPending? %>
  <% season_state = "Pending" %>
<% elsif @season.isOpen? %>
  <% season_state = "Open" %>
<% elsif @season.isClosed? %>
  <% season_state = "Closed" %>
<% else %>
  <h3>State: Unknown</h3>
<% end %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading"><%= "#{@season.year}" %> Season - <%= season_state %></div>
      <div class="panel-body">
        <ul class="list-group">
	  <li class="list-group-item"><b>Type:</b>
	    <% if @season.nfl_league %>
	      NFL League
	    <% else %>
	      College League
	    <% end  %>
          </li>
          <li class="list-group-item"><b>Number of Weeks: </b> <%= "#{@season.number_of_weeks}" %></li>
          <li class="list-group-item"><b>Current Week: </b> <%= "#{@season.current_week}" %></li>
        </ul>
	<div class="btn-group">
	  <button type="button" class="btn btn-default btn-primary dropdown-toggle" data-toggle="dropdown">
	    Set Season State
	    <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" role="menu">
	    <li><%= link_to "Open", season_open_path(@season) %></li>
	    <li><%= link_to "Closed", season_closed_path(@season) %></li>
	  </ul>
	</div>
      </div>
      </div>
    </div>
  </div>
</div>