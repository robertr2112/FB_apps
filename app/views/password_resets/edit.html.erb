<% provide(:title, "Update Password") %>
<h1>Reset Password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, :url => password_reset_path(params[:id])) do |f| %>
      <%= render 'fields', :f => f %>
      <%= f.submit "Update Password", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
