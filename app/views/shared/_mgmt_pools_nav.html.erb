<% if pool.nil? %>
    <li class="dropdown">
      <a class="dropdown-toggle"
	data-toggle="dropdown"
	href="#" >
	My Pools
	<b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "Create new pool", new_pool_path %></li>
        <li><%= link_to "Show all pools", pools_path %></li>
        <% current_user.pools.each do |pool| %>
	  <li><%= link_to "#{pool.name}", pool_path(pool) %></li>
        <% end %>
      </ul>
    </li>
<% else %>
  <% if pool.isOwner?(current_user) %>
    <li class="dropdown">
      <a class="dropdown-toggle"
	data-toggle="dropdown"
	href="#" >
	Manage Pool
	<b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
	  <li><%= link_to "Edit pool", edit_pool_path(pool) %></li>
	  <li>
	    <%= link_to "Delete pool", pool, :method => :delete, 
		:confirm => "Are you sure?", :title => "Delete#{pool.name}" %>
	  </li>
	  <li><%= link_to "Send Group Message", new_pool_pool_message_path(pool) %>
      </ul>
    </li>
  <% else %>
    <% if pool.isMember?(current_user) %>
      <% if pool.weeks.empty? %>
	<li><%= link_to "Leave Pool", leave_path(pool.id), id: pool.id %></li>
      <% end %>
    <% else %>
      <li><%= link_to "Join Pool", join_path(pool.id), id: pool.id %></li>
    <% end %>
  <%end %>
<% end %>
