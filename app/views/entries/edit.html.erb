<% provide(:title, 'Edit entry') %>
<h1>Edit Entry</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@entry, html: { class: 'form-horizontal' }) do |f| %>
      <%= render 'fields', f: f %>
      <div class="control-group">
        <div class = "controls">
          <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

